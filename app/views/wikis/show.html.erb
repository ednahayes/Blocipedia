<% if policy(@wiki).show? %> 
 <div class="container">
  <div class="col-md-8">
   <h1><%= markdown @wiki.title %> <br></h1>
    <h2><%= markdown @wiki.body %></h2>
  </div>
  <div class="pull-right col-md-3">
    <% if policy(@wiki).update? %>   
        <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <% end %>
    <% if policy(@wiki).destroy? %> 
        <%= link_to "Delete Wiki", @wiki, method: :delete,  class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %> >
    <% end %>
    <small>Private: <%= @wiki.private? %> </small>
    <% if @wiki.private == true  %>
        <h4>Wiki owner: <%= @wiki.user.username %> <br> submitted <%= time_ago_in_words(@wiki.created_at) %> ago.</h4>

        <h5>Collaborators:</h5> 
        <div class='collaborators'>
          <%= render partial: 'collaborators/collaborators', locals: { wiki: @wiki } %>
        </div>
          <% if @wiki.user_id == current_user.id || current_user.admin? %> 
            <div class='new-collaborator'>
            <%= render partial: 'collaborators/form', locals: { wiki: @wiki } %>
            </div>
          </div>
          <% end %>
      <% end %>
    </div>
  </div>
<% end %> 
